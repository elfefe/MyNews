<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".controllers.fragments.ArticleFragment"
    android:orientation="vertical"
>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/article_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="20dp"

            app:layout_constraintTop_toTopOf="parent"

            android:text="Title"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/article_subtitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"

            app:layout_constraintTop_toBottomOf="@id/article_title"

            android:text="Sub title with words"
            />

        <TextView
            android:id="@+id/article_content"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"

            app:layout_constraintTop_toBottomOf="@id/article_subtitle"

            android:text="Content have big paragraphe of lorem ipsum an hello world  over sayonara shit"
            />

        <TextView
            android:id="@+id/article_link"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"

            app:layout_constraintBottom_toBottomOf="parent"

            android:text="url/theUrl?Of+the+article=???"
            />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>